int main()
{
    int a,b,c,d,e,f;
    int v1=0;
    int v2=0;
    printf("digite um numero inteiro\n");
    scanf("%d %d %d %d %d %d",&a,&b,&c,&d,&e,&f);
    
    int numeros[6] ={a,b,c,d,e,f,};
   
   for (int i=0; i<6; i++){
       if (numeros[i]%2==0){
       v1++;
   }
   else {
       v2++;
   }
}
    printf("tem %d númeors pares",v1);
    printf("\ntem %d números impars",v2); 

    return 0;
}
