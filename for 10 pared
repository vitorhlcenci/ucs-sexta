#include <stdio.h>

int main()
{
    int i,j;
    int valores[9];
    
    for(i=0;i<10;i++){
        printf("digite o: %d valor\n",i+1);
        scanf("%d",&valores[i]);
    }
    
    for(i=0;i<10;i++){
        if(valores[i]%2==0){
            printf("o número %d:%d é par\n",i+1,valores[i]);
        }
        else{
            printf("o número %d:%d é impar\n",i+1,valores[i]);
        }
    }


    return 0;
}
